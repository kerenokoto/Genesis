<script>

  $(".rotator > div:gt(0)").hide();
  setInterval(function() {
    $('.rotator > div:first')
    .fadeOut(0)
    .next()
    .fadeIn(1000)
    .end()
    .appendTo('.rotator');
}, 3000);
</script>



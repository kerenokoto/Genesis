<%= form_for([@event, @event.comments.build]) do |f| %>


  <div class="control-group">
    <%= f.label :commenter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commenter, :class => 'form-control' %>
    </div>
    
  </div>
  <div class="control-group">
    <!-- <%= f.label :title, :class => 'control-label' %> -->
    <div class="controls">
      <!-- <%= f.text_field :title, :class => 'form-control' %> -->
    </div>
   
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    
  </div>
  <div class="control-group">
    <!-- <%= f.label :event_id, :class => 'control-label' %> -->
    <div class="controls">
      <%= f.hidden_field :event_id, :class => 'form-control' %>
    </div>
   
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            event_comments_path(:id), :class => 'btn btn-default' %>

<% end %>

<%= render partial: "shared/navbar"%>
	<div class="container">
		<div class="row">
			<div class="col-md-3" style='margin-top:60px'>
				<%=image_tag "articles.png"%>
			</div>
			<div class="col-md-6">
				<h1>MOST READ ARTICLES</h1>
					<% @rss.each do |rss| %>
				
					<h2> <%= link_to rss.title, rss.link %></h2>
					<p><%=rss.description.split(';')[2].split('.')[0] %></p>
					<%= image_tag rss.media_content_url %>
					<% end %>
			</div>
				
		</div>
	</div>
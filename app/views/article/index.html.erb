					<%= image_tag rss.media_content_url %>
					<% end %>
			</div>
		</div>
		<div class='col-sm-1'>
			<!-- <%=image_tag "Flows2.png", :size => '150x520'%> -->
			</div>	
		</div>
	</body>
		<div class="container">
			<%= yield %>
		</div>

</html>
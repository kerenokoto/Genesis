<%= form_for @expense, :html => { :class => "form-horizontal expense" } do |f| %>

    <% if @expense.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :salary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :salary, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:salary]) %>
  </div>
  <div class="control-group">
    <%= f.label :maintenance, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :maintenance, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:maintenance]) %>
  </div>
  <div class="control-group">
    <%= f.label :utility_bills, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :utility_bills, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:utility_bills]) %>
  </div>
  <div class="control-group">
    <%= f.label :total_expenses, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_expenses, :class => 'form-control' %>
    </div>
    <%= error_span(@expense[:total_expenses]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            expenses_path, :class => 'btn btn-default' %>

<% end %>

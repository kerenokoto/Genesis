<h1>Listing expenses</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Salary</th>
      <th>Maintenance</th>
      <th>Utility bills</th>
      <th>Total expenses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.title %></td>
        <td><%= expense.salary %></td>
        <td><%= expense.maintenance %></td>
        <td><%= expense.utility_bills %></td>
        <td><%= expense.total_expenses %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

